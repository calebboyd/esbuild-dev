{
  "name": "esbuild-dev",
  "version": "0.3.0",
  "author": "Harry Brundage",
  "license": "MIT",
  "bin": {
    "esbuild-dev": "pkg/dist-node/bin.js",
    "tsnd": "pkg/dist-node/bin.js"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/gadget-inc/esbuild-dev.git"
  },
  "publishConfig": {
    "access": "public"
  },
  "@pika/pack": {
    "pipeline": [
      [
        "@pika/plugin-ts-standard-pkg"
      ],
      [
        "@pika/plugin-build-node"
      ],
      [
        "@pika/plugin-simple-bin",
        {
          "bin": "esbuild-dev"
        }
      ]
    ]
  },
  "scripts": {
    "build": "tsc",
    "watch": "tsc -w",
    "lint": "yarn run lint:prettier && yarn run lint:eslint",
    "lint:prettier": "node --max-old-space-size=4096 node_modules/.bin/prettier --check \"src/**/*.{js,ts,tsx}\"",
    "lint:eslint": "node --max-old-space-size=4096 node_modules/.bin/eslint --quiet --ext ts,tsx src",
    "lint:fix": "node --max-old-space-size=4096 node_modules/.bin/prettier --write --check \"src/**/*.{js,ts,tsx}\" && eslint --ext ts,tsx --fix src",
    "pkg:build": "pika build",
    "pkg:yalc": "yarn pkg:build && cd pkg && yalc push"
  },
  "dependencies": {
    "chokidar": "^3.4.3",
    "esbuild": "^0.8.23",
    "find-yarn-workspace-root": "^2.0.0",
    "node-sync-ipc": "^3.0.2",
    "yargs": "^16.2.0"
  },
  "devDependencies": {
    "@gadgetinc/eslint-config": "^0.1.1",
    "@gadgetinc/prettier-config": "^0.1.0",
    "@pika/pack": "^0.5.0",
    "@pika/plugin-build-node": "^0.9.2",
    "@pika/plugin-simple-bin": "^0.9.2",
    "@pika/plugin-ts-standard-pkg": "^0.9.2",
    "@types/lodash": "^4.14.167",
    "@types/node": "^14.14.14",
    "@types/yargs": "^15.0.12",
    "eslint": "^7.15.0",
    "lodash": "^4.17.20",
    "prettier": "^2.2.1",
    "typescript": "^4.1.3"
  }
}
