{
  "name": "esbuild-dev",
  "version": "0.1.0",
  "main": "dist/index.js",
  "author": "Harry Brundage",
  "license": "MIT",
  "bin": {
    "esbuild-dev": "./dist/bin.js",
    "tsnd": "./dist/bin.js"
  },
  "scripts": {
    "build": "tsc",
    "watch": "tsc -w",
    "lint": "yarn run lint:prettier && yarn run lint:eslint",
    "lint:prettier": "node --max-old-space-size=4096 node_modules/.bin/prettier --check \"src/**/*.{js,ts,tsx}\"",
    "lint:eslint": "node --max-old-space-size=4096 node_modules/.bin/eslint --quiet --ext ts,tsx src",
    "lint:fix": "node --max-old-space-size=4096 node_modules/.bin/prettier --write --check \"src/**/*.{js,ts,tsx}\" && eslint --ext ts,tsx --fix src"
  },
  "dependencies": {
    "chokidar": "^3.4.3",
    "esbuild": "^0.8.23",
    "netlinkwrapper": "^2.0.2",
    "node-sync-ipc": "^3.0.2",
    "yargs": "^16.2.0"
  },
  "devDependencies": {
    "@gadgetinc/eslint-config": "^0.1.1",
    "@gadgetinc/prettier-config": "^0.1.0",
    "@types/node": "^14.14.14",
    "@types/yargs": "^15.0.12",
    "eslint": "^7.15.0",
    "lodash": "^4.17.20",
    "prettier": "^2.2.1",
    "typescript": "^4.1.3"
  }
}
